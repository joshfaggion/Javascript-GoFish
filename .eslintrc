{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": [
    "airbnb",
    "plugin:jest/recommended"
  ],
  "rules": {
    "class-methods-use-this": 0,
    "no-unused-vars": 0,
    "no-undef": 0,
    "semi": 0,
    "no-restricted-globals": 0,
    "no-debugger": 1,
    "no-underscore-dangle": 0,
    "guard-for-in": 0,
    "no-restricted-syntax": 0,
    "no-plusplus": 0,
    "no-param-reassign": 0,
    "max-len": 0,

  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["html", "jest"]
}
